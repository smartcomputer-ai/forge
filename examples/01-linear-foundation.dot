digraph LinearFoundation {
    graph [
        goal="Generate a basic implementation plan",
        default_max_retry=1
    ]

    start [shape=Mdiamond, label="Start"]
    plan [
        shape=box,
        label="Plan",
        prompt="Create a short implementation plan for: $goal"
    ]
    summarize [
        shape=box,
        label="Summarize",
        prompt="Summarize the plan in 3 bullet points"
    ]
    exit [shape=Msquare, label="Exit"]

    start -> plan -> summarize -> exit
}
